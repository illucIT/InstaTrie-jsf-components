<?xml version="1.0" encoding="ISO-8859-1"?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
                version="2.0">
    <namespace>http://www.illucit.com/jsf/instatrie</namespace>

    <tag>
        <description><![CDATA[Output "highlighted String" value, highlighted from Prefix Index filtering.]]></description>
        <tag-name>outputHighlightedText</tag-name>
        <component>
            <component-type>com.illucit.faces.component.OutputHighlightedText</component-type>
            <renderer-type>com.illucit.faces.component.OutputHighlightedTextRenderer</renderer-type>
        </component>
        <attribute>
            <description><![CDATA[Unique identifier of the component in a namingContainer.]]></description>
            <name>id</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description><![CDATA[Boolean value to specify the rendering of the component, when set to false component will not be rendered.]]></description>
            <name>rendered</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <description><![CDATA[String value to be rendered]]></description>
            <name>value</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description><![CDATA[Search string which is used for highlighting]]></description>
            <name>search</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description><![CDATA[Flag to define whether the value can contain HTML. If this value is false, all segments will be escaped properly; if it is true, the HTML contents will be rendered as they are. Default is false.]]></description>
            <name>containsHtml</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>

</facelet-taglib>
